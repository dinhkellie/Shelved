<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="edu.swarthmore.cs.cs71.shelved.shelved.CameraFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Camera"
            android:textSize="30sp" android:id="@+id/textView3"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" android:layout_marginTop="23dp" android:id="@+id/ISBN"
    />
    <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/ISBN"
            android:layout_centerHorizontal="true" android:layout_marginTop="90dp" android:id="@+id/button2"/>

</RelativeLayout>